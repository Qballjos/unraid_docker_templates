<?xml version="1.0" encoding="utf-8"?>
<Containers>
  <TemplateURL>https://raw.githubusercontent.com/Qballjos/unraid_docker_templates/master/templates/pydio.xml</TemplateURL>
    <Privileged>false</Privileged>
    <Beta>False</Beta>
    <Category>Network:Web</Category>
    <Name>Pydio</Name>
    <Description>
    Self-Hosted File Sync and Sharing
    </Description>
    <Overview>
    Modern file management platform built according to your business needs and regulations, Pydio is open-source software deployed on your servers or wherever you decide.
    </Overview>
    <Registry>https://hub.docker.com/r/linuxserver/pydio-cells</Registry>
    <Project>https://pydio.com/</Project>
    <Repository>linuxserver/pydio-cells</Repository>
    <Network>bridge</Network>
    <Networking>
        <Mode>bridge</Mode>
        <Publish>
            <Port>
                <HostPort>8282</HostPort>
                <ContainerPort>8080</ContainerPort>
                <Protocol>tcp</Protocol>
            </Port>
        </Publish>
    </Networking>
<Environment>
    <Variable>
      <Value></Value>
      <Name>EXTERNALURL</Name>
      <Mode/>
    </Variable>
  </Environment>
    <Data>
        <Volume>
            <HostDir>/mnt/user/appdata/pydio</HostDir>
            <ContainerDir>/config</ContainerDir>
            <Mode>rw</Mode>
        </Volume>
    </Data>
    <WebUI>http://[IP]:[PORT:8282]/</WebUI>
  <ExtraParams></ExtraParams>
  <Icon>https://raw.githubusercontent.com/qballjos/unraid_docker_templates/master/images/Pydio.png</Icon>
</Containers>