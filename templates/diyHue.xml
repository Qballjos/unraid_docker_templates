<?xml version="1.0" encoding="utf-8"?>
<Container version="2">
    <Privileged>false</Privileged>
    <Beta>False</Beta>
    <Category>Network:Web</Category>
    <Name>diyHue</Name>
    <Description>
    The open-source alternative to building and controlling your own Hue-like bulbs, strips, lights, and devices!
    </Description>
    <Overview>
    The open-source alternative to building and controlling your own Hue-like bulbs, strips, lights, and devices!
    </Overview>
    <Registry>https://hub.docker.com/r/diyhue/core</Registry>
    <GitHub>https://github.com/diyhue/diyHue</GitHub>
    <Project>https://diyhue.github.io</Project>
    <Repository>diyHue</Repository>
    <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>880</HostPort>
        <ContainerPort>80</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>843</HostPort>
        <ContainerPort>443</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>1900</HostPort>
        <ContainerPort>1900</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
      <Port>
        <HostPort>2100</HostPort>
        <ContainerPort>2100</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/diyHue/export</HostDir>
      <ContainerDir>/opt/hue-emulator/export/</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <WebUI>http://[IP]:[PORT:880]/</WebUI>
  <Icon>https://raw.githubusercontent.com/qballjos/unraid_docker_templates/master/images/diyHue.png</Icon>

  <Network Default="bridge">bridge</Network>

  <Config Type="Port" Name="Web Interface Port" Target="80" Default="880" Mode="tcp" Display="always-hide" Required="true"
       Description="This is diyHue Web UI port you can access via a web browser on HTTP.">880</Config>
    
  <Config Type="Port" Name="Web Interface Port" Target="443" Default="843" Mode="tcp" Display="always-hide" Required="true"
       Description="This is diyHue Web UI port you can access via a web browser on HTTPS.">843</Config>

  <Config Type="Port" Name="TCP Data Transfer Port" Target="1900" Default="1900" Mode="tcp" Display="advanced-hide" Required="true"
       Description="This is diyHue UDP port.">1900</Config>

  <Config Type="Port" Name="UDP Data Transfer Port" Target="2100" Default="2100" Mode="udp" Display="advanced-hide" Required="true"
       Description="This is diyHue UDP port.">2100</Config>

  <Config Type="Path" Name="Config Storage Path" Target="/opt/hue-emulator/export/" Default="/mnt/user/appdata/diyHue/export" Mode="rw" Display="advanced-hide" Required="true"
       Description="This is where diyHue will export its configuration.">/mnt/user/appdata/diyHue/export</Config>
</Container>
